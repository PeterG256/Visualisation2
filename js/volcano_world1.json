{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Recorded fatal volcano eruptions",
  "data": {
    "url": "../Data/clean.csv"
  },
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "vconcat":[
    {
      "width" : 700,
      "height" : 350,
      "layer": [
        {
          "description": "World map taken from Week 8 Studio. No country borders",
          "data": {
            "url": "../Data/world1.topojson",
            "format": {"type": "topojson", "feature": "country_names"}
          },
          "projection": {"type": "equalEarth"},
          "mark": {
            "type": "geoshape",
            "fill": "#eeeeee",
            "stroke": null
          }
        },
        {
          "transform": [
            {"filter": "datum.Death_tot != null && datum.VEI != null && datum.Death_tot > Deaths_Above"},
            {"filter": {"param": "brush"}}
          ],
          "mark": {
            "type": "circle",
            "stroke": "black",
            "strokeWidth": 0.2,
            "strokeOpacity": 0.4
          },
          "encoding": {
            "longitude": {"field": "Lon", "type": "quantitative"},
            "latitude": {"field": "Lat", "type": "quantitative"},
            "color": {
              "field": "VEI",
              "type": "ordinal",
              "title": "VEI level",
              "scale": {
                "domain": [0, 1, 2, 3, 4, 5, 6, 7, 8],
                "scheme": "reds"
              }
            },
            "size": {
              "field": "Death_tot_des",
              "type": "ordinal",
              "title": "Deaths",
              "scale": {
                "domain": [1, 2, 3, 4],
                "scheme": "reds"
              },
              "legend": {
                "labelExpr": "datum.label == '1' ? 'Few (1 to 50 deaths)' : datum.label == '2' ? 'Some (51 to 100 deaths)' : datum.label == '3' ? 'Many (101 to 1000 deaths)' : datum.label == '4' ? 'Very many (over 1000 deaths)' : 'Unknown'"
              }
            },
            "tooltip": [
              {"field": "Name", "type": "nominal", "title": "Volcano"},
              {"field": "Year", "type": "quantitative", "title": "Year"},
              {"field": "Ctry", "type": "nominal", "title": "Country"},
              {"field": "VEI", "type": "ordinal"},
              {"field": "Death_tot", "type": "quantitative", "format": ",", "title": "Total Deaths"}
            ]
          }
        }
      ]
    },
    {
      "width": 700,
      "height": 60,
      "mark": {
        "type": "bar",
        "color": "#8f8f8f"
      },
      "params": [{
        "name": "brush",
        "select": {"type": "interval", "encodings": ["x"]}
      }],
      "transform": [
        {"filter": "datum.Year > 0"}
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "bin": {"binned": false, "step": 20},
          "scale": {"domain": [0, 2050]},
          "axis": {"values": [0, 500, 1000, 1500, 2000]},
          "title": "Year"
        },
        "y": {
          "field": "Death_tot",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false},
          "title": "Total deaths"
        }
      }
    },
    {
      "width" : 700,
      "height" : 350,
      "layer": [
        {
          "transform": [
            {"filter": "datum.Death_tot != null && datum.VEI != null && datum.Death_tot > Deaths_Above"},
            {"filter": {"param": "brush"}}
          ],
          "mark": {
            "type": "circle",
            "stroke": "black",
            "strokeWidth": 0.2,
            "strokeOpacity": 0.4
          },
          "encoding": {
            "x": {
              "field": "Ele",
              "type": "quantitative",
              "axis": {
                "title": "Elevation above sea level (m)"
              },
              "scale": {
                "domain": [-500, 6000]
              }
            },
            "y": {
              "field": "Type",
              "title": "Volcano Type"
            },
            "color": {
              "field": "VEI",
              "type": "ordinal",
              "title": "VEI level",
              "scale": {
                "domain": [0, 1, 2, 3, 4, 5, 6, 7, 8],
                "scheme": "reds"
              }
            },
            "size": {
              "field": "Death_tot_des",
              "type": "ordinal",
              "title": "Deaths",
              "scale": {
                "domain": [1, 2, 3, 4],
                "scheme": "reds"
              },
              "legend": {
                "labelExpr": "datum.label == '1' ? 'Few (1 to 50 deaths)' : datum.label == '2' ? 'Some (51 to 100 deaths)' : datum.label == '3' ? 'Many (101 to 1000 deaths)' : datum.label == '4' ? 'Very many (over 1000 deaths)' : 'Unknown'"
              }
            },
            "tooltip": [
              {"field": "Name", "type": "nominal", "title": "Volcano"},
              {"field": "Year", "type": "quantitative", "title": "Year"},
              {"field": "Ctry", "type": "nominal", "title": "Country"},
              {"field": "VEI", "type": "ordinal"},
              {"field": "Death_tot", "type": "quantitative", "format": ",", "title": "Total Deaths"}
            ]
          }
        }
      ]
    }
  ],
  "params": [
    {
      "name": "Deaths_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000,
        "step": 1,
        "name": "Minimum Deaths: "
      }
    }
  ]
}