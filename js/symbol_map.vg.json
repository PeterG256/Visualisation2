{
  "description": "Prototype taken from Week 8 Lab",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Earthquakes of magnitude 4 or large between 4 Oct 2020 and 10 Oct 2020",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "description": "World map taken from Week 8 Studio. No country borders",
      "data": {
        "url": "../Data/world1.topojson",
        "format": {"type": "topojson", "feature": "country_names"}
      },
      "mark": {"type": "geoshape", "fill": "#eeeeee", "stroke": null}
    },
    {
      "data": {
        "url": "../Data/earthquake.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "mag",
          "type": "quantitative",
          "title": "Magnitude (Richter scale)",
          "scale": {"domain": [4, 8]}
        },
        "color": {
          "field": "dmin",
          "type": "quantitative",
          "title": "Depth in km",
          "scale": {"scheme": "reds"}
        },
        "shape": {
          "field" : "depth"
        }
      }
    }
  ]
}


"scale": {
  "domain": [0, 1, 2, 3, 4, 5, 6, 7],
  "scheme": "reds"
}